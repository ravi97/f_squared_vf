<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FB8007" >

    <ImageView
        android:id="@+id/iv_sfx"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:onClick="start"
        android:src="@drawable/play" />

    <ImageView
        android:id="@+id/iv_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="16dp"
        android:onClick="help"
        android:src="@drawable/beta" />

    <ImageView
        android:id="@+id/iv_gravity"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/iv_next"
        android:layout_centerVertical="true"
        android:layout_marginLeft="19dp"
        android:onClick="settings"
        android:src="@drawable/play1" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="178dp"
        android:layout_height="80dp"
        android:layout_below="@+id/iv_sfx"
        android:layout_toRightOf="@+id/iv_gravity" >

        <TextView
            android:id="@+id/tv_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/tv_p"
            android:layout_below="@+id/tv_p"
            android:gravity="bottom"
            android:height="25dp"
            android:text="score"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="player"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/iv_next"
        android:layout_alignLeft="@+id/iv_next"
        android:text="Tap here for help"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff" />

    <TextView
        android:id="@+id/tv_hlevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv1"
        android:layout_alignRight="@+id/iv_gravity"
        android:text="7"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:textSize="80sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv1"
        android:layout_toLeftOf="@+id/tv_hlevel"
        android:text="lvl_"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:textSize="25sp" />

</RelativeLayout>